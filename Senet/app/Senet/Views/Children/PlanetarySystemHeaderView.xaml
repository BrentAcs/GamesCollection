<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Senet.Views.Children.PlanetarySystemHeaderView">

   <StackLayout>
      <Label Text="Planetary System Info"
             FontAttributes="Bold"
             TextColor="LightBlue"/>

      <HorizontalStackLayout BackgroundColor="Black">
         <Label Text="Name:" 
                Padding="0,0,4,0"/>
         <Label Text="KBP-123" 
                TextColor="Yellow" 
                WidthRequest="96"/>
         <Label Text="Star:" 
                Padding="0,0,4,0"/>
         <Label Text="Red-Dwarf" 
                TextColor="Yellow" 
                WidthRequest="96"/>
         <Label Text="Location:" 
                Padding="0,0,4,0"/>
         <Label Text="[ 10,10,10 ]" 
                TextColor="Green" 
                WidthRequest="96"/>
         <Label Text="Diameter:" 
                Padding="0,0,4,0"/>
         <Label Text="100 AU" 
                TextColor="Green" 
                WidthRequest="96"/>

      </HorizontalStackLayout>

   </StackLayout>

</ContentView>
