<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:children="clr-namespace:Senet.Views.Children"
             x:Class="Senet.Views.Children.SatelliteSystemInfoView">
   <StackLayout>
      <HorizontalStackLayout Padding="8,0,0,0">
         <Label x:Name="PlanetsExpandLabel"
                Text="[-]"
                WidthRequest="24"/>
         <Label Text="Planets - Satellite Systems"
                FontAttributes="Bold"
                TextColor="LightBlue"/>
         <Label x:Name="PlanetarySystemCountLabel"
                Text="(10)"
                Padding="4,0,0,0"
                FontAttributes="Bold"
                TextColor="LightBlue"/>
      </HorizontalStackLayout>

      <children:SatelliteSystemHeaderView/>

      <StackLayout>
         <HorizontalStackLayout Padding="32,0,0,0">
            <Label x:Name="MoonsExpandLabel"
                   Text="[-]"
                   WidthRequest="24"/>
            <Label Text="Moons"
                   FontAttributes="Bold"
                   TextColor="LightBlue"/>
            <Label x:Name="MoonsCountLabel"
                   Text="(10)"
                   Padding="4,0,0,0"
                   FontAttributes="Bold"
                   TextColor="LightBlue"/>
         </HorizontalStackLayout>

      </StackLayout>

   </StackLayout>
</ContentView>
