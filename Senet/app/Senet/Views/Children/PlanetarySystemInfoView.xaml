<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:Senet.Views.Templates"
             x:Class="Senet.Views.Children.PlanetarySystemInfoView">
   <Frame BorderColor="LightGreen"
          CornerRadius="0"
          Padding="4">

      <Grid ColumnDefinitions="*"
            RowDefinitions="42,Auto,Auto">

         <templates:PlanetarySystemHeaderView Grid.Column="0"
                                              Grid.Row="0"/>

         <StackLayout Grid.Column="0"
                      Grid.Row="1">
            <HorizontalStackLayout Padding="8,0,0,0">
               <Label x:Name="PlanetsExpandLabel"
                      Text="[-]"
                      WidthRequest="24"/>
               <Label Text="Planets - Satellite Systems"
                      FontAttributes="Bold"
                      TextColor="LightBlue"/>
               <Label x:Name="PlanetarySystemCountLabel"
                      Text="(10)"
                      Padding="4,0,0,0"
                      FontAttributes="Bold"
                      TextColor="LightBlue"/>
            </HorizontalStackLayout>

            <StackLayout Padding="32,0,0,0">
               <Label Text="Satellite System Info"
                      FontAttributes="Bold"
                      TextColor="LightBlue"/>

               <HorizontalStackLayout BackgroundColor="Black">
                  <Label Text="Name:" 
                         Padding="0,0,4,0"/>
                  <Label Text="Planet 1" 
                         TextColor="Yellow" 
                         WidthRequest="96"/>
                  <Label Text="Planet:" 
                         Padding="0,0,4,0"/>
                  <Label Text="Barren" 
                         TextColor="Yellow" 
                         WidthRequest="96"/>
                  <Label Text="Distance:" 
                         Padding="0,0,4,0"/>
                  <Label Text=".74 AU" 
                         TextColor="Green" 
                         WidthRequest="96"/>
                  <Label Text="Diameter:" 
                         Padding="0,0,4,0"/>
                  <Label Text="34.1 km" 
                         TextColor="Green" 
                         WidthRequest="96"/>

               </HorizontalStackLayout>

            </StackLayout>


         </StackLayout>

         <StackLayout Grid.Column="0"
                      Grid.Row="2">
            <HorizontalStackLayout Padding="8,0,0,0">
               <Label x:Name="AsteroidsExpandLabel"
                      Text="[-]"
                      WidthRequest="24"/>
               <Label Text="Asteroid Fields"
                      FontAttributes="Bold"
                      TextColor="LightBlue"/>
               <Label x:Name="AsteroidFieldCountLabel"
                      Text="(20)"
                      Padding="4,0,0,0"
                      FontAttributes="Bold"
                      TextColor="LightBlue"/>
            </HorizontalStackLayout>
         </StackLayout>

      </Grid>

   </Frame>
</ContentView>
